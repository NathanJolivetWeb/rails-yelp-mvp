<div>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit "Submit review", class: "mt-2 btn btn-secondary w-100" %>
<% end %>
</div>
<%= link_to restaurants_path do %>
  <div class="mt-2 btn btn-info w-100">Back to restaurants</div>
<%end%>
