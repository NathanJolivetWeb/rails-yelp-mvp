<div class="container">
	<div class="card">
	  <div class="card-header">
	    restaurant #<%= @restaurant.id %>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title"><%= @restaurant.name %></h5>
	    <p class="card-text"><%= @restaurant.address %></p>
	    <p class="card-text"><%= @restaurant.phone_number %></p>
	    <p class="card-text"><%= @restaurant.category %></p>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"> <%= review.content %> <%= review.rating %>/5 </li>
        <% end %>
      </ul>
	  </div>
  </div>
  <div>
    <%= link_to new_restaurant_review_path(@restaurant) do %>
    <div class="mt-2 btn btn-secondary w-100">Leave a comment</div>
    <%end%>

    <%= link_to restaurants_path do %>
    <div class="mt-2 btn btn-info w-100">Back to restaurants</div>
    <%end%>
  </div>
</div>
